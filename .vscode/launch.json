{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurador de Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app",          // o "run.py" si lo inicias así
                "FLASK_ENV": "development",  // activa debug automático
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-reload"                // opcional, quita reloader doble
            ],
            "jinja": true
        }
    ]
}
